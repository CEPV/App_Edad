<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MAMenor">


    <ImageView
        android:id="@+id/imgBibron"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/ic_biberon"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="100sp"

        />
    <TextView
        android:id="@+id/txtSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="50sp"
        android:textSize="50sp"
        android:layout_marginLeft="60sp"
        android:layout_below="@+id/imgBibron"
        android:layout_centerInParent="true"
        />
    <EditText
        android:id="@+id/editxtResultado"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/txtSuma"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginLeft="100sp"

        />
    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respuesta"
        android:layout_below="@+id/editxtResultado"
        android:layout_marginLeft="160sp"
        />

    <Button
        android:id="@+id/btnRe"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_below="@+id/txtResultado"
        android:layout_marginTop="20sp"
        android:layout_centerInParent="true"
        android:text="Validar Respuesta"
        android:onClick="Pulsar"
        />
    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_below="@+id/btnRe"
        android:layout_marginTop="20sp"
        android:layout_centerInParent="true"
        android:text="Regresar"
        android:onClick="Pulsar"
        />

</RelativeLayout>